<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL9Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">hehehe14</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/library</property>
        <property name="hibernate.hbm2ddl.books">update</property>
        <property name="show_sql">true</property>
        <property name="format_sql">false</property>
        <mapping class="autopark.model.Clients"/>
        <mapping class="autopark.model.BookTypes"/>
        <mapping class="autopark.model.Books"/>
        <mapping class="autopark.model.Journal"/>
    </session-factory>
</hibernate-configuration>